@using ITCommunityCRM.Data.Models
@model IEnumerable<EventUser>
@{
    ViewData["Title"] = "Index";

}

<link href="~/libs/font-awesome/css/all.min.css" rel="stylesheet" />
<link href="~/libs/admin-lte/dist/css/adminlte.min.css" rel="stylesheet" />
<h1>Menu User</h1>
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Event</h1>
            </div>
            <div class="col-sm-6">
                <a class="btn bg-green float-sm-right" data-bs-toggle="modal" data-bs-target="#Create">
                    <i class="fa fa-plus-square"></i>
                    Create
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <button type="button" class="btn bg-blue btn-search">
                                                <span class="fas fa-search" aria-hidden="true"></span>
                                            </button>
                                        </div>
                                        <input type="text" id="filter" name="Keyword" class="form-control txt-search" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>UserName</th>
                                        <th>IsAnonymousUser</th>
                                        <th>EmailConfirmed</th>
                                        <th>UserName</th>
                                        <th>IsVisitedEvent</th>
                                    </tr>
                                </thead>
                                <tbody class="searchable" id="tBody">
                                    @foreach (var eventUser in Model)
                                    {
                                        <tr>
                                            <th class="infoTh">@eventUser.User.UserName</th>
                                            <th class="infoTh" data-name="@eventUser.User.IsAnonymousUser">
                                                @eventUser.User.IsAnonymousUser
                                            </th>
                                            <th class="infoTh" data-name="@eventUser.User.EmailConfirmed">
                                                @eventUser.User.Email
                                            </th>
                                            <th class="infoTh" data-name="@eventUser.User.UserName">
                                                @eventUser.User.UserName
                                            </th>
                                            <th class="infoTh" data-name="@eventUser.IsVisitedEvent">
                                                @eventUser.IsVisitedEvent
                                            </th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
