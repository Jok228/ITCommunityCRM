@model ITCommunityCRM.Data.Models.Event

@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ITCommunityCRM</title>
    <link rel="stylesheet" href="~/css/main.css"/>
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico"/>
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css" asp-append-version="true">
</head>
<body>
<div class="event event__container col align-items-center" style="--tw-bg-opacity: 1; color:whitesmoke; background-color: rgb(35 35 35/var(--tw-bg-opacity));">
    <div class="event__top row align-items-center" style="height: 100vh; max-width: 1200px; margin: auto;">
        <div class="event__title col">
            <h1 class="mb-3" style="font-size: 50px">@Model.Name</h1>
            <span class="badge bg-info text-dark" style="font-size: 30px">@Model.StartDate.Year</span>
        </div>
        <div class="event__short-description col">
            <h2 class="mb-2">Для @Model.Name разработчиков</h2>
            <p class="badge bg-danger mb-2">Уже прошел</p>
            <p class="mb-1" style="font-size: 22px; color: #b1b1b1;">@Model.StartDate - @Model.EndDate</p>
            <p style="font-size: 22px; color: #b1b1b1;">Минск онлайн/офлайн</p>
        </div>
    </div>
    <div class="event__bottom">
        <div class="event__full-description mb-4">
            <h3 class="mb-3" style="text-align: start;">Про встречу @Model.Name:</h3>
            @Model.Description
        </div>
        <div class="event__tags mb-3">
            <span class="badge rounded-pill bg-secondary">devops</span>
            <span class="badge rounded-pill bg-secondary">scala</span>
        </div>
        <div class="event__for">
            Для всех кто знает о @Model.Name.
        </div>
    </div>
</div>
</body>
<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/vendor/animsition/js/animsition.min.js"></script>
<script src="~/vendor/bootstrap/js/popper.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/vendor/select2/select2.min.js"></script>
<script src="~/vendor/daterangepicker/moment.min.js"></script>
<script src="~/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/vendor/countdowntime/countdowntime.js"></script>
<script src="~/js/main.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</html>
