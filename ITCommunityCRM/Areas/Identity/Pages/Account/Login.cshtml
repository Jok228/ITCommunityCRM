@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="limiter">
    <div class="container-login100" style="background-image: url(@Url.Content("~/images/bg-01.jpg"));">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form id="account" method="post" class="login100-form validate-form">
                <span class="login100-form-title p-b-49">
                    Login
                </span>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="wrap-input100 validate-input m-b-23">
                    <label asp-for="Input.Email" class="label-input100">Email</label>
                    <input asp-for="Input.Email" class="input100" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="wrap-input100 validate-input">
                    <label asp-for="Input.Password" class="label-input100">Password</label>
                    <input asp-for="Input.Password" class="input100" autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="flex-wrap p-t-15">
                    <input asp-for="Input.RememberMe"/>
                    <label asp-for="Input.RememberMe" class="label-input100">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div class="text-right p-t-8 p-b-31">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button id="login-submit" type="submit" class="login100-form-btn">Log in</button>
                    </div>
                </div>

                <div class="txt1 text-center p-t-54 p-b-20">
                    <span>
                        Or Log in Using
                    </span>
                </div>

                <div class="flex-c-m">
                    <script async src="https://telegram.org/js/telegram-widget.js?22" data-telegram-login="@Model.TelegramLogin" data-size="medium" data-auth-url="@Model.AuthUrl" data-request-access="write"></script>
                </div>

                <div class="flex-col-c p-t-25">
                    <span class="txt1 p-b-17">
                        Or Register Using
                    </span>

                    <a class="txt2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </div>
            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}